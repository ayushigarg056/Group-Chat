<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
     xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/signupbg"
    android:fillViewport="true"
    tools:context="com.ayushi.user.loginfirebase.Registration">

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:padding="10dp">

    <RelativeLayout
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

    <com.ayushi.user.loginfirebase.customfonts.MyTextView
        android:id="@+id/signin2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="20dp"
        android:textColor="#000"
        android:gravity="center"
        android:background="@drawable/rect"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
  />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <View
            android:layout_width="1dp"
            android:layout_height="203dp"
            android:background="@color/signintext"
            android:layout_gravity="bottom"
            android:layout_marginBottom="39dp"
            android:layout_marginLeft="115dp"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >




            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/chat2"
                >

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="21dp"
                    android:layout_height="25dp"
                    android:src="@drawable/back"
                    android:layout_margin="16dp"

                    />


                <com.ayushi.user.loginfirebase.customfonts.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign up"
                    android:textSize="22dp"
                    android:textColor="#fff"
                    android:layout_marginLeft="16dp"
                    android:layout_margin="16dp"

                    />




            </LinearLayout>


            <LinearLayout

                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                >

                <com.ayushi.user.loginfirebase.customfonts.MyEditText
                    android:textSize="20dp"
                    android:id="@+id/username1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Username"
                    android:textColorHint="@color/signintext"
                    android:textColor="@color/signintext"
                    android:layout_marginLeft="60dp"
                    android:inputType="text"
                    android:background="#0000"
                    android:maxLength="20"
                    android:padding="16dp"
                    android:drawableLeft="@drawable/user1"
                    android:drawablePadding="35dp"
                    android:layout_marginRight="65dp"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_height="1dp"
                    android:background="@color/signintext" />

                <com.ayushi.user.loginfirebase.customfonts.MyEditText
                    android:textSize="20dp"
                    android:id="@+id/mail"
                    android:maxLength="20"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:textColorHint="@color/signintext"
                    android:textColor="@color/signintext"
                    android:layout_marginLeft="60dp"
                    android:inputType="text"
                    android:background="#0000"
                    android:padding="16dp"
                    android:drawableLeft="@drawable/email1"
                    android:drawablePadding="35dp"
                    android:layout_marginRight="65dp"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_height="1dp"
                    android:background="@color/signintext" />


                <com.ayushi.user.loginfirebase.customfonts.MyEditText
                    android:textSize="20dp"
                    android:id="@+id/password1"
                    android:drawablePadding="38dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:textColorHint="@color/signintext"
                    android:textColor="@color/signintext"
                    android:layout_marginLeft="60dp"
                    android:inputType="textPassword"
                    android:background="#0000"
                    android:padding="16dp"
                    android:maxLength="8"
                    android:drawableLeft="@drawable/paasword1"
                    android:layout_marginRight="60dp"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_height="1dp"
                    android:background="@color/signintext"
                    android:layout_marginBottom="63dp"
                    />



            </LinearLayout>
        </LinearLayout>

    </FrameLayout>


</RelativeLayout>
  </FrameLayout>
</ScrollView>