<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/bg2">
<RelativeLayout
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ayushi.user.loginfirebase.Login">

    <com.ayushi.user.loginfirebase.customfonts.MyTextView
        android:id="@+id/forget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forget Password?"
        android:textSize="16dp"
        android:textColor="#ffff"
        android:gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:padding="33dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"

        />
    <com.ayushi.user.loginfirebase.customfonts.MyTextView
        android:id="@+id/signin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in"
        android:textSize="20dp"
        android:textColor="#ffff"
        android:gravity="center"
        android:padding="3dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp"

        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">




        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/chat3"
                >

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
        <!--    <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dfssda"
                android:textSize="30dp"
                android:textColor="#ffff"/>
            -->

            </LinearLayout>

            <LinearLayout

                android:orientation="vertical"
                       android:layout_width="match_parent"
                       android:layout_height="288dp"
                       android:gravity="center"
                       >

                <com.ayushi.user.loginfirebase.customfonts.MyEditText
                    android:textSize="20dp"
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:textColorHint="@color/signintext"
                    android:textColor="@color/signintext"
                    android:layout_marginLeft="60dp"
                    android:inputType="text"
                    android:background="#0000"
                    android:maxLength="20"
                    android:padding="16dp"
                    android:drawableLeft="@drawable/user1"
                    android:drawablePadding="35dp"
                    android:layout_marginRight="65dp"/>


                <View
                           android:layout_width="match_parent"
                           android:layout_marginLeft="60dp"
                           android:layout_marginRight="60dp"
                           android:layout_height="1dp"
                           android:background="@color/signintext" />


                       <com.ayushi.user.loginfirebase.customfonts.MyEditText
                           android:textSize="20dp"
                           android:id="@+id/password"
                           android:drawablePadding="38dp"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:hint="Password"
                           android:textColorHint="@color/signintext"
                           android:textColor="@color/signintext"
                           android:layout_marginLeft="60dp"
                           android:inputType="textPassword"
                           android:background="#0000"
                           android:maxLength="8"
                           android:padding="16dp"
                           android:drawableLeft="@drawable/paasword1"
                           android:layout_marginRight="60dp"/>


                       <View
                           android:layout_width="match_parent"
                           android:layout_marginLeft="60dp"
                           android:layout_marginRight="60dp"
                           android:layout_height="1dp"
                           android:background="@color/signintext"
                           android:layout_marginBottom="63dp"
                           />



                   </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="140dp"
            android:background="@color/signintext"
            android:layout_gravity="bottom"
            android:layout_marginBottom="85dp"
            android:layout_marginLeft="120dp"
            />

    </FrameLayout>


</RelativeLayout>

</ScrollView>